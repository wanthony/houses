<%= form_for house, :html => {:class => 'form-horizontal'} do |f| %>
  <%= control_group do %>
    <%= f.label :name, :class => 'control-label' %>
    <%= controls do %>
      <%= f.text_field :name, :class => 'span5' %>
    <% end -%>
  <% end -%>
  <%= control_group do %>
    <%= f.label :address, :class => 'control-label' %>
    <%= controls do %>
      <%= f.text_field :address, :class => 'span5' %>
    <% end %>
  <% end %>
  <%= control_group do %>
    <%= f.label :rating, :class => 'control-label' %>
    <%= controls do %>
      <%= f.select :rating, [0, 1, 2, 3, 4, 5], {}, :class => 'span1' %>
    <% end %>
  <% end %>
  <%= control_group do %>
    <%= f.label :description, :class => 'control-label' %>
    <%= controls do %>
      <%= f.text_area :description, :class => 'span5' %>
    <% end %>
  <% end %>
  <%= div :class => 'form-actions' do %>
    <%= f.submit :Submit, :class => 'btn btn-primary' %>
  <% end %>
<% end %>